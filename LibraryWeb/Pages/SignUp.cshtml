@page
@model LibraryWeb.Pages.SignUpModel
@{
    ViewData["Title"] = "Borrower-Sign Up";
}

<div class="text-center">
<p>SIGN UP</p>
<form method="post">
    <label for="bname">Borrower Name:</label>
    <input asp-for="borrower_name" id="bname" /><br><br>
    <label for="bnum">Phone Number:</label>
    <input asp-for="borrower_num" type="tel" id="bnum" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}"/><br><br>
    <label  for="bpassword">Password:</label>
    <input asp-for="borrower_pass" id="bpassword" type="password"/><br><br>
    <label for="cpassword">Confirm Password:</label>
    <input asp-for="confirm_pass" type="password" id="cpassword" /><br><br>
    <button type="submit">Sign Up</button>
</form>
</div>